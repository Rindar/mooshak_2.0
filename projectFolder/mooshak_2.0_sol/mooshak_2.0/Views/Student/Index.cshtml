@using System.Web.UI.WebControls
@model List<mooshak_2._0.Models.ViewModels.CourseViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mooshak - Reykjavík University";
}

<h1 class="page-header">Mooshak Fonseca</h1>

@{
    if (!Model.Any())
    {
        <div class="alert">We're sorry but you aren't in any courses</div>
    }
    else
    {
        foreach (var course in Model)
        {
            <div class="col-xs-6 col-sm-4">
                <h2>@course.Title</h2>
                <p>Here is the description</p>
                <p>@Html.ActionLink("Details", "Course", "Student", new { id = course.Id }, new { @class = "btn btn-primary btn-large" })</p>
            </div>
        }
    }
}
