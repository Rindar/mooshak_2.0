@model mooshak_2._0.Models.ViewModels.CourseViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>

@{
    if(!Model.Assignments.Any())
    {
        <div class="alert">There aren't any assignments in this course yet</div>
    }
    foreach (var assignment in Model.Assignments)
    {
        <div class="col-xs-6 col-sm-4">
            <h2>@assignment.Title</h2>
            <p>@assignment.Description</p>
            <p>@Html.ActionLink("Details", "Assignment", "Student", new { id = assignment.Id }, new { @class = "btn btn-primary btn-large" })</p>
        </div>
    }
}
