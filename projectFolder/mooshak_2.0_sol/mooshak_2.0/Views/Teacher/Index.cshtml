@model List<mooshak_2._0.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Mooshak - Reykjavík University";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="jumbotron">
    <h1 class="page-header text-center">Mooshak Fonseca</h1>
    <h2 class="page-header text-center">Courses</h2>
</div>

@{
    foreach (var course in Model)
    {
        <div class="col-xs-6 col-sm-4">

            <div class="breadcrumb">
                <div class="overflow">
                    <h2 class="text-center">@course.Title</h2>
                </div>
                <br/>
                <div class="form-horizontal">
                    <p class="text-center">@Html.ActionLink("Go to course", "Course", "Teacher", new {id = course.Id}, new {@class = "btn btn-primary btn-large"})</p>
                </div>
            </div>

        </div>
    }
}

