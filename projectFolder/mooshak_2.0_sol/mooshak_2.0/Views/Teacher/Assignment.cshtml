@model mooshak_2._0.Models.ViewModels.AssignmentViewModel

@{
    ViewBag.Title = "All Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">All Milestones</h2>

<div class="form-actions">
    @Html.ActionLink("Create New Milestone", "CreateMilestone", "Teacher", new {assignmentId = Model.Id}, new {@class = "btn btn-info"})
</div>

@foreach (var milestone in Model.Milestones)
{
    <div class="col-xs-6 col-sm-4">
        <div class="breadcrumb">
            <h2 class="text-center">@milestone.Title</h2>
            <p class="text-center font-large">Weight: @milestone.Weight %</p>
            <br/>
            <div class="form-horizontal">
                <p class="text-center btn-inline">@Html.ActionLink("Details", "Submission", "Teacher", new { id = milestone.Id }, new { @class = "btn btn-primary btn" })</p>
                <p class="text-center btn-inline-right">@Html.ActionLink("Delete Milestone", "DeleteMilestone", "Teacher", new {milestoneId = milestone.Id}, new {@class = "btn btn-danger btn"})</p>
            </div>
        </div>
    </div>
}
<div class="actionLinkInBlock">
    @Html.ActionLink("Back", "Course",  new { courseId = Model.Id })
</div>