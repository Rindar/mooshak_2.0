@model mooshak_2._0.Models.Entities.Course

@{
    ViewBag.Title = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header text-center">Edit Course @Model.Title</h2>

<form id="EditCourse" method="POST">
    <fieldset class="form-group">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset class="col-md-10 form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </fieldset>

        <fieldset class="col-md-10 form-group">
            @Html.LabelFor(model => model.Teacher, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Teacher, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Teacher, "", new { @class = "text-danger" })
        </fieldset>

        <fieldset class="col-md-10">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @cols = 80, @rows = 10 })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </fieldset>
    </fieldset>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-default"/>
        @Html.ActionLink("Cancel", "CourseIndex", "Course", new { @class = "btn btn-danger btn-inline" })
    </div>
</form>
